// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Article {
  id          String   @id @default(cuid())
  titre       String
  description String
  photo       String?
  prix_achat  Float
  quantite    Int
  reference   String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // العلاقة مع المبيعات
  ventes Vente[]

  @@map("articles")
}

model Vente {
  id            String   @id @default(cuid())
  articleId     String
  articleTitle  String
  quantiteVendue Int
  prixTotal     Float
  dateVente     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // العلاقة مع المنتج
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("ventes")
}
